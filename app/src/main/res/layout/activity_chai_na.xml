<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChaiNaActivity">

    <RelativeLayout
        android:id="@+id/relayout_vvv"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sim_fanhui_view"
            android:padding="10dp"
            android:background="@mipmap/common_icon_back_black_n"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="被采纳建议"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/relayout_vvv"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/recy_caina"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <include layout="@layout/caina_include"
    android:visibility="gone"
    android:id="@+id/include_caina"
    />


</RelativeLayout>