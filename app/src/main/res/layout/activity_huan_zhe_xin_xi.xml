<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.HuanZheXinXIActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/user_bg"
                android:id="@+id/sim_huanzhe_bg"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/huanzhe_sim_fanhui"
                android:background="@mipmap/common_icon_back_white_n"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                />

            <RelativeLayout

                android:layout_marginTop="196dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/sim_yonghu_tx"
                    fresco:roundAsCircle="true"
                    android:layout_marginLeft="30dp"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/common_icon_girl_n"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/sim_huanzhe_sex_nv"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/common_icon_boy_n"
                    android:layout_marginLeft="62dp"
                    android:visibility="gone"
                    android:layout_marginTop="30dp"
                    android:id="@+id/sim_huanzhe_sex_nan"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欧若拉"
                    android:textSize="14sp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/text_huanzhe_name"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/relay_huanzhe_item"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/login_bian"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="165cm"
                            android:textSize="14sp"
                            android:id="@+id/text_shengao"
                            android:layout_marginLeft="55dp"
                            android:gravity="center"
                            />
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginTop="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="50dp"
                            android:layout_weight="1"
                            android:background="@mipmap/my_icon_height_n"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_tizhong"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50kg"
                            android:layout_marginLeft="45dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginTop="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_weight="1"
                            android:background="@mipmap/my_icon_weight_n"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_nianling"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25岁"
                            android:textSize="14sp"
                            android:layout_marginLeft="40dp"
                            android:gravity="center"
                            />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginTop="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:background="@mipmap/my_icon_age_n"
                            />
                    </LinearLayout>

            </LinearLayout>



            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/relay_huanzhe_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="[主要病症]"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_bingzhneg_huanzhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="面神经炎"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="[现病史]"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_bingshi_huanzhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="内科"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="[既往病史]"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_bingshijiwang_huanzhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="周围性神经炎"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="[最近一次治疗经历]"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_tiantan_huanzhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="北京天坛医院" />

                        <TextView
                            android:id="@+id/text_riqikaishi_huanzhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="30dp"
                            android:textSize="12sp"
                            android:layout_marginRight="90dp"
                            android:text="开始时间" />
                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/text_riqijieshu_huanzhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:text="结束时间" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text_jingli_huanzhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="每天进行针扎按摩"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="[相关图片]"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14sp" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="320dp"
                        android:layout_height="144dp"
                        android:layout_gravity="center"
                        android:id="@+id/sim_huanzhe_zp"
                        android:layout_marginTop="10dp"
                        />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>