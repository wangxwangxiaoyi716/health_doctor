<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.RuZhuActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善信息"
            android:textColor="@color/colorAccent3"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核通过即可成功入驻"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorAccent3"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的邮箱账号"
            android:layout_marginLeft="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_shape"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/ed_ruzhuyx"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/verificationcode"
                android:text="获取验证码"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:id="@+id/huoqu_yzm"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入验证码"
            android:layout_marginLeft="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_shape"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/ed_ruzhuyzm"
                />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入密码"
            android:layout_marginLeft="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_shape"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/ed_ruzhupwd"
                />

           <com.facebook.drawee.view.SimpleDraweeView
               android:layout_width="16dp"
               android:layout_height="16dp"
               android:layout_marginTop="30dp"
               android:background="@mipmap/login_icon_hide_password_n"
               android:layout_alignParentRight="true"
               android:layout_marginRight="50dp"
               />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请再次输入密码"
            android:layout_marginLeft="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_shape"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/ed_ruzhupwd2"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="30dp"
                android:background="@mipmap/login_icon_show_password"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/but_net"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:textColor="#ffff"
        android:text="下一步"
        android:textSize="16sp"
        android:background="@drawable/button_xyb"
        />

</LinearLayout>