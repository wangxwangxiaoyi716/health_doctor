<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/forget_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.WangJiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fanhui_wangji"
            android:src="@mipmap/common_icon_back_white_n"
            android:layout_marginLeft="30dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <TextView
            android:text="忘记密码"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/layout_corners"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/new_email"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:inputType="number"
                android:hint="请输入邮箱账号"
                android:textSize="14sp" />
            <CheckBox
                android:button="@null"
                android:id="@+id/btn_email"
                android:background="@drawable/button_corners_blue"
                android:text="获取验证码"
                android:textSize="7sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="160dp"
                android:layout_width="58dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="260dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:alpha="0.6"
        android:layout_height="8dp"/>
    <TextView
        android:layout_width="240dp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:alpha="0.3"
        android:layout_height="8dp"/>
    <Button
        android:id="@+id/next"
        android:text="下一步"
        android:textColor="@color/colorAccent3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_corners_white"
        android:layout_width="300dp"
        android:layout_height="40dp"/>

</LinearLayout>