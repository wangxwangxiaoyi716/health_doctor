<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.YinHangKaActivity">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="30dp"
            android:padding="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sim_fanhui_view_bangdingka"
            android:background="@mipmap/common_icon_back_black_n"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定银行卡"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/sim_yinhuangshanchu"
            android:visibility="gone"
            android:background="@mipmap/common_icon_delete"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            />

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="260dp"
            android:background="@drawable/senfen_bian"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="160dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="290dp"
                android:layout_height="160dp"
                android:background="@mipmap/bank_card_front"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/my_icon_camera_n"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/sim_pz"
                />

            <ImageView
                android:layout_width="290dp"
                android:layout_height="160dp"
                android:id="@+id/yinhang_image"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@id/sim_pz"
                android:layout_centerHorizontal="true"
                android:text="点击拍摄/上传银行卡正面"
                android:textColor="@color/colorAccent3"
                android:textSize="14sp"
                android:id="@+id/text_paishezp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/bank_card"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/bai"
            android:text="下一步"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_corners_blue"
            android:id="@+id/bu_next"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/bai"
            android:text="确定"
            android:visibility="gone"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_corners_blue"
            android:id="@+id/button_yinhuangquedingshow"
            />

    </RelativeLayout>

</LinearLayout>