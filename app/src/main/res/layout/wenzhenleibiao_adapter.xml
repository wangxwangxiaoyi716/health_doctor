<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <com.wd.doctor.utils.SwipeMenu
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relativelayout_whenzhen"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/wenzhen_sim"
                    android:layout_width="40dp"
                    fresco:roundAsCircle="true"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/text_namemz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/wenzhen_sim"
                    android:text="陈乔恩"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_timeriqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="日期"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/text_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/wenzhen_sim"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/wenzhen_sim"
                    android:text="左眼皮"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/questioning_prompt"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="12dp"
                    android:src="@mipmap/hdd" />


            </RelativeLayout>

        <Button
            android:id="@+id/quxiao"
            android:layout_width="96dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:background="#D92109"
            android:text="结束问诊"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </com.wd.doctor.utils.SwipeMenu>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="#F2F2F2" />


</LinearLayout>
